{
  "extends": "@quasar/app-vite/tsconfig-preset",
  "compilerOptions": {
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "useDefineForClassFields": false,
    "target": "ES2022",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "node"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "lib/*": ["./lib/*"]
    },
    "baseUrl": "."
  },
  "vueCompilerOptions": {
    "plugins": [
      "@volar/vue-language-plugin-pug"
    ]
  }
}
